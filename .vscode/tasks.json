{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++ build",
			"command": "g++",
			"args": [
				"-std=c++23",
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}\\main.cpp",
				"-o",
				"${workspaceFolder}\\main.exe",
				"-IC:\\Eigen3\\",
				"-Ofast",
				"-fconcepts-ts"				
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: g++"
		}
	]
}